# Environment variables for Medical AI Diagnostics System
# Copy this file to .env and fill in the values

# API settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# Security
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./medical_ai.db

# AI model paths
MODEL_PATH=backend/models/model.pt
MODEL_CONFIG_PATH=backend/models/config.json

# Upload settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB max upload size

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
